<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger text-white">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mb-4">
    <%= f.label :first_name, 'First Name', class: 'text-white' %>
    <%= f.text_field :first_name, class: "mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 placeholder-white text-white" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, 'Last Name', class: 'text-white' %>
    <%= f.text_field :last_name, class: "mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 placeholder-white text-white" %>
  </div>

  <div class="mb-4">
    <%= f.label :bio, 'Bio', class: 'text-white' %>
    <%= f.text_area :bio, class: "mt-2 block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 placeholder-white text-white", placeholder: "Write something about yourself...", required: true %>
  </div>

  <div class="mt-4">
    <%= f.submit 'Update Profile', class: 'w-full py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500' %>
  </div>
<% end %>
