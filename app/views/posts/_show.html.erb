<%# <div class="flex"> %>
  <% if post.user == current_user %>
    <%= link_to edit_post_path(post) do %>
      <%= render 'edit' %>
    <% end %>
    <%= button_to post_path(post), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" } do %>
      <%= render 'delete' %>
    <% end %>
  <% end %>
<%# </div> %>
