<div class="mt-4">
  <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "text-white py-2 px-4 rounded-lg border border-gray-600 hover:bg-gray-700 transition duration-300" %>
</div>

<div>
  <%= turbo_frame_tag id='new_post', src:new_post_path %>
</div>

<div id="posts" class="mt-4">
  <% @posts.each do |post| %>
    <div class="border border-gray-600 text-white rounded-lg p-4 mb-4">
      <%= render 'post', post: post %>
    </div>
  <% end %>
</div>
