<div>
  <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>
</div>

<div>
  <%= link_to "New Post", new_post_path %>
</div>

<div class="mt-4">
  <% @posts.each do |post| %>
    <div class="text-lg mt-4"><%= post.user.full_name %>:</div>
    <div class="flex">
      <%= link_to post_path(post) do %>
        <div class="text-md text-gray-700"><%= post.tweet %></div>
      <% end %>
    </div>
  <% end %>
</div>
