<div class="text-lg flex"><%= @post.user.full_name %>:</div>
<div class="flex mt-2">
  <%= @post.tweet %>
  <% if @post.user == current_user %>
  <%= link_to edit_post_path(@post) do %>
    <%= render 'edit-icon' %>
  <% end %>
  <%= button_to post_path(@post), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, class: 'cursor-pointer' do %>
    <%= render 'delete-icon' %>
  <% end %>
<% end %>
</div>

<h1 class='mt-5 text-lg'>Comments:</h1>

<% @comments.each do |comment| %>
  <p class="text-md text-gray-600 mt-3 flex items-center">
    <%= comment.user.full_name %>: <%= comment.body %>
    <div class='inline-flex'>
    <% if comment.user == current_user %>
      <%= link_to edit_post_comment_path(@post, comment) do %>
        <%= render 'edit-icon', class: "ml-2 cursor-pointer" %>
      <% end %>
      <%= button_to post_comment_path(@post, comment), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this comment?" } do %>
        <%= render 'delete-icon', class: "ml-2 cursor-pointer" %>
      <% end %>
    <% end %>
    </div>

  </p>
<% end %>

<%= render 'comments/form' %>
